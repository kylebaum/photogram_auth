<div class="page-header">


<div class="row">
  <div class="col-md-8 col-md-offset-2">
    <a href="/photos/new" class="btn btn-default btn-block">
      <i class="fa fa-plus"></i>
    </a>

    <hr>
  </div>

<div class="row">



      <% @photos.each do |photo| %>
      <div class="col-md-8 col-md-offset-2">
          <div class="panel panel-default">
            <div class="panel-heading">
              <h3 class="panel-title">
                <a href="/users/<%= photo.user_id %>">photo.username</a>
                <!-- <small>
                13 minutes ago
                </small> -->
              </h3>
            </div>

            <div class="panel-body">
        <a href="/photos/<%= photo.id %>">
          <img src="<%= photo.image %>" class="img-responsive">
        </a>

        <p>
           <a href="/delete_like/285" class="btn btn-link">
             <i class="fa fa-heart"></i>
           </a>
           <!-- hola
           likes
           this -->
       </p>
       <ul class="media-list">

         <li class="media">
           <div class="media-body">
             <h6 class="media-heading">
               <a href="<%= photo.user_id %>">photo.username</a>
               <small>
                 <!-- 13 minutes ago -->
               </small>
             </h6>
             <!-- hi -->
           </div>
         </li>


         <li class="media">
           <div class="media-body">
             <form action="/create_comment" method="post">
               <!-- Hidden input for authenticity token to protect from forgery -->
               <input name="authenticity_token" type="hidden" value="hPnwcBY/+38uM8Lu1QVFfaBY+zyhspJNPFacldDEJhtpbNWyG+WmFoeYegEVg+ux6GoiELydFLoHRIsx/q1NHQ==">

               <input type="hidden" name="photo_id" value="67">

               <input type="hidden" name="user_id" value="1">

               <!-- Label and input for body -->
               <div class="form-group">
                 <label for="body" class="sr-only">
                   Body
                 </label>

                 <input type="text" id="body" name="body" placeholder="Add a comment..." class="form-control" required>
               </div>
             </form>
           </div>
         </li>
       </ul>

       <div class="col-md-12">
         <table class="table table-striped table-hover">
           <tr>
             <th>Caption</th>
             <th>Image</th>
             <th>User</th>
             <th>Actions</th>
           </tr>

      <tr>
        <td><%= photo.caption %></td>

        <td>  <img src="<%= photo.image %>" width="80"></td>
        <td><%= photo.user_id %></td>
        <td>
          <a href="/photos/<%= photo.id %>" class="btn btn-primary">Show</a>

          <% if current_user.id == photo.user_id  %>
                  <a href="/bookmarks/<%= photo.id %>/edit" class="btn btn-warning">Edit</a>
                  <a href="/delete_photo/<%= photo.id %>" class="btn btn-danger" rel="nofollow">Delete</a>
                  <% end %>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>
